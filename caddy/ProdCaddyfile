fastapi.{$EXT_ENDPOINT1}:88, fastapi.{$LOCAL_1}:88, fastapi.{$LOCAL_2}:88, :88 {
  handle_path /static* {
    root * /code/static
    file_server
  }

  reverse_proxy fastapi_server:8008
}

storage.{$EXT_ENDPOINT1}:88, storage.{$LOCAL_1}:88, storage.{$LOCAL_2}:88 {
  reverse_proxy minio_server:9000 
}

stash.{$EXT_ENDPOINT1}:88, stash.{$LOCAL_1}:88, stash.{$LOCAL_2}:88 {
  reverse_proxy minio_server:9090 
}

